<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ftp_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
<!--TODO : BEFORE RELEASE : Rename this file -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/navigation_recycler_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="300dp"
        android:layout_gravity="end|bottom">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/navigation_fab_upload_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/sub_floating_button_margin"
            android:visibility="gone"
            app:fabCustomSize="@dimen/sub_floating_button_size"
            app:fabSize="mini"
            app:srcCompat="@drawable/icon_cloud_upload_filled" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/navigation_fab_create_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/sub_floating_button_margin"
            android:visibility="gone"
            app:fabCustomSize="@dimen/sub_floating_button_size"
            app:fabSize="mini"
            app:srcCompat="@drawable/icon_create_folder_filled" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/navigation_floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/floating_button_margin"
            android:visibility="visible"
            app:fabCustomSize="@dimen/floating_button_size"
            app:srcCompat="@drawable/icon_add" />

    </FrameLayout>

</FrameLayout>