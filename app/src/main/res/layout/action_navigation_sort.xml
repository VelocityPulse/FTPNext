<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Parent not Useless -->
    <LinearLayout
        android:layout_width="@dimen/drop_menu_item_width"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/popup_menu_background"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/popup_action_a_to_z"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drop_menu_item_height"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/drop_menu_item_horizontal_padding"
            android:paddingEnd="@dimen/drop_menu_item_horizontal_padding">

            <ImageView
                android:layout_marginTop="0.5dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_priority_high" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/drop_menu_item_text_padding_start"
                android:paddingEnd="@dimen/drop_menu_item_text_padding_end"
                android:text="A to Z"
                android:textColor="?colorOnSecondary"
                android:textSize="@dimen/drop_menu_item_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_action_z_to_a"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drop_menu_item_height"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/drop_menu_item_horizontal_padding"
            android:paddingEnd="@dimen/drop_menu_item_horizontal_padding">

            <ImageView
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_priority_low" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/drop_menu_item_text_padding_start"
                android:paddingEnd="@dimen/drop_menu_item_text_padding_end"
                android:text="Z to A"
                android:textColor="?colorOnSecondary"
                android:textSize="@dimen/drop_menu_item_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_action_recent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drop_menu_item_height"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/drop_menu_item_horizontal_padding"
            android:paddingEnd="@dimen/drop_menu_item_horizontal_padding">

            <ImageView
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_update" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/drop_menu_item_text_padding_start"
                android:paddingEnd="@dimen/drop_menu_item_text_padding_end"
                android:text="Recent modification"
                android:textColor="?colorOnSecondary"
                android:textSize="@dimen/drop_menu_item_text_size" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>