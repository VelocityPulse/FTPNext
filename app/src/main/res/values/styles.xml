<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primaryLight</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>

        <item name="colorSecondary">@color/primaryLight</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">#F44336</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="android:itemBackground">@color/primary</item>
    </style>

<!--    Action bar ============================================== -->

    <style name="ThemeActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.CustomActionBar">
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="actionBarTheme">@style/ThemeActionBar</item>
        <item name="android:actionBarTheme">@style/ThemeActionBar</item>
    </style>

</resources>