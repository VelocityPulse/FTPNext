<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    Themes ============================================== -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    Sub themes ============================================== -->
    <style name="AppTheme.Light">
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>

        <item name="colorSecondary">@color/lightAccent</item>
        <item name="colorOnSecondary">@color/lightBackground</item>
        <item name="colorSurface">@color/lightBackground</item>

        <item name="colorOnBackground">@color/lightAccent</item>

        <item name="colorError">@color/lightError</item>

        <item name="android:textColor">@color/lightTextColor</item>

        <item name="actionBarContentColor">@android:color/white</item>

        <item name="android:colorBackground">@color/lightBackground</item>

        <!--Commented because it made some background issue in PopupWindow.-->
        <!--<item name="android:itemBackground">@color/lightPrimary</item>&ndash;&gt;-->

        <item name="logSuccessColor">@color/lightLogSuccess</item>
        <item name="logErrorColor">@color/lightLogError</item>
        <item name="logStatusColor">#191919</item>
        <item name="logReplyColor">@color/lightLogReply</item>

        <item name="alertDialogTheme">@style/AppTheme.Light.Dialog</item>

    </style>

    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>

        <item name="colorSecondary">@color/darkPrimary</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="colorError">@color/darkError</item>
        <item name="colorOnBackground">@color/darkAccent</item>
        <item name="actionBarContentColor">@android:color/white</item>
        <item name="android:textColor">@color/darkWhite</item>

        <item name="android:colorBackground">@color/darkBackground</item>

        <!--Commented because it made some background issue in PopupWindow.-->
        <!--<item name="android:itemBackground">@color/darkPrimary</item>-->

        <item name="logSuccessColor">@color/darkLogSuccess</item>
        <item name="logErrorColor">@color/darkLogError</item>
        <item name="logStatusColor">@color/darkLogStatus</item>
        <item name="logReplyColor">@color/darkLogReply</item>

        <item name="alertDialogTheme">@style/AppTheme.Dark.Dialog</item>

    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background_dark</item>

        <!-- Colors and sizes for buttons -->
        <item name="buttonBarButtonStyle">@style/AppTheme.Dialog.Button</item>

        <!-- Colors init for contentView of the dialog : -->
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:colorPrimary">@color/darkAccent</item>

        <!-- Colors of title and message : -->
        <item name="android:textColor">@color/darkWhite</item>
        <item name="android:textColorPrimary">@color/darkWhite</item>

        <!-- Colors for item text -->
        <item name="textColorAlertDialogListItem">@color/darkWhite</item>
    </style>

    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background_light</item>

        <!-- Colors and sizes for buttons -->
        <item name="buttonBarButtonStyle">@style/AppTheme.Dialog.Button</item>

        <!-- Colors init for contentView of the dialog : -->
        <item name="colorAccent">@color/lightAccent</item>
        <item name="android:colorPrimary">@color/lightAccent</item>

        <!-- Colors of title and message : -->
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textColorPrimary">@color/lightTextColor</item>

        <item name="textColorAlertDialogListItem">@color/lightTextColor</item>
    </style>

    <style name="AppTheme.Dialog.Button" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/darkPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>